<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/id_item_week"
            style="@style/TextViewStyle"
            android:layout_gravity="center"
            android:textSize="@dimen/medium_text_size"
            tools:text="week" />

        <TextView
            android:id="@+id/id_item_date"
            style="@style/TextViewStyle"
            android:layout_gravity="center"
            android:textSize="@dimen/small_text_size"
            tools:text="date" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_item_high_temp"
                style="@style/TextViewStyle"
                android:textSize="@dimen/large_text_size"
                tools:text="high" />

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/slash"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/id_item_low_temp"
                style="@style/TextViewStyle"
                android:textSize="@dimen/medium_text_size"
                tools:text="low" />

        </LinearLayout>

        <ImageView
            android:id="@+id/id_item_weather_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            tools:src="@drawable/sun" />

        <TextView
            android:id="@+id/id_item_weather_type"
            style="@style/TextViewStyle"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/thin_text_size"
            tools:text="type" />
    </LinearLayout>

</android.support.v7.widget.CardView>