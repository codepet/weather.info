<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_item_weather_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_item_week"
                style="@style/TextViewStyle"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/id_item_date"
                style="@style/TextViewStyle"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_item_weather_type"
            style="@style/TextViewStyle"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/thin_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_item_high_temp"
            style="@style/TextViewStyle"
            android:textSize="@dimen/large_text_size" />

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/slash"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/id_item_low_temp"
            style="@style/TextViewStyle"
            android:textSize="@dimen/medium_text_size" />

    </LinearLayout>

</LinearLayout>